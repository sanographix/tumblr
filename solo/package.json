{
  "name": "your-project",
  "version": "1.0.0",
  "scripts": {
    "sass": "sass --watch src/sass:build/css",
    "imagemin": "imagemin images/* --out-dir=build/images",
    "concat": "cat src/js/*.js > build/js/scripts.js",
    "uglify": "uglifyjs build/js/scripts.js -o build/js/scripts.min.js",
    "serve": "browser-sync start --server --files 'build/css/*.css, *.html, build/js/*.js'",
    "watch": "npm-run-all --parallel sass imagemin concat uglify serve",
    "build": "npm-run-all sass imagemin concat uglify"
  },
  "devDependencies": {
    "sass": "^1.56.0",
    "browser-sync": "^2.27.10",
    "imagemin-cli": "^7.0.0",
    "uglify-js": "^3.14.5",
    "npm-run-all": "^4.1.5",
    "chokidar-cli": "^3.0.0"
  }
}
